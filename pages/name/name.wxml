<view class="container">
  <view class="first-name-box">
    <text class="name-text">姓：</text>
    <input type="text" class="name-input" bindinput="changeFirstName" />
  </view>
  <view class="radio-box">
    <radio-group class="radio-group" bindchange="sexChange">
      <label class="radio">
        <radio value="0" checked="checked" />男
      </label>
      <label class="radio">
        <radio value="1" />女
      </label>
    </radio-group>
  </view>
  <view class="radio-box">
    <radio-group class="radio-group" bindchange="numChange">
      <label class="radio">
        <radio value="0" checked="checked" />单名
      </label>
      <label class="radio">
        <radio value="1" />双名
      </label>
    </radio-group>
  </view>
  <button class="button-box" bindtap="getName">一键取名</button>
</view>